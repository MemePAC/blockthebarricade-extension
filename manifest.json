{
  "manifest_version": 3,
  "name": "Block The Barricade",
  "description": "Blocks those who are not doing the bare minimum.",
  "version": "1.0",
  "action": { "default_popup": "popup/popup.html" },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": { "id": "blockout@memepac.org" }
  }
}
